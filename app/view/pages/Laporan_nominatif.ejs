  <script>
    let vtable_denda = new gridjs.Grid({
      columns: ["No","Nama", "Judul", "Penerbit", "Tanggal Pinjam", "Jumlah", "Lama Pinjam",
        "Tanggal Kembali", "Keterlambatan (hari)",
        "Denda"
      ],
      data: [],
      pagination: {
        enabled: true,
        limit: 4
      },

      language: {

        'pagination': {
          'previous': 'Sebelumnya',
          'next': 'Selanjutnya',
          'showing': 'Menampilkan',
          'results': 'Hasil',
          'to': 'Sampai',
          'of': 'Dari'

        }
      }

    }).render(document.getElementById("table_nominatif"));

    $('#tanggal1').val(new Date().toISOString().substring(0, 10))

    user = '<%= session["nama"] %>'
    if (user == "") window.location = "/login"

    document.getElementById("user").innerHTML = `<a href="#" class="d-block">${user} </a>`


    function lap_nominatif1() {
      $.ajax({
        url: '/lap_nominatif1',
        method: "post",
        dataType: "json",
        data: {
          tgl1: document.getElementById("tanggal1").value,

        },
        success: function (hasil) {
          vdata = []

         
          for (data of hasil.data) {

            if (data.telat < 0) {
              data.telat = 0
            }
          }
          let no= 1
          for (kolom of hasil.data) {
            isi_table = []
            isi_table.push(no,kolom.peminjam, kolom.judul, kolom.penerbit, kolom.tg_pinjam, kolom.jumlah, kolom.lama, kolom.tgl_kembali, kolom.telat, kolom.denda,
              pemisah_ribuan(kolom.denda * kolom.telat))
            vdata.push(isi_table)
            no++
          }
          vtable_denda.updateConfig({
            data: vdata
          }).forceRender()
console.log(data)
        },
        error: function (hasil) {
          toastr.error(hasil.responseText)
        }
      })
    }

    function logout() {

      $.ajax({
        url: "/logout",
        method: "get",
        dataType: "json",
        data: {},
        success: function (results) {
          window.location = '/login'
        },
        error: function (hasil) {
          toastr.error(hasil.responseText)
        }
      })
    }

