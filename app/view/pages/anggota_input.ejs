      function daftar_anggota() {
        $.ajax({
          url: '/daftar_anggota',
          method: "GET",
          dataType: "json",
          data: {},
          success: function (hasil) {
            vdata = []

            for (kolom of hasil) {
              aksi = `
            <div class="project-action">
                <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#edit" onclick="tampil_anggota(${kolom.n_anggota})">
                  <i class="fas fa-pencil-alt">
                  </i>  
                  Edit
                </button>
                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#notif" onclick="data_hapus(${kolom.n_anggota})" >
                  <i class="fas fa-info-circle">
                  </i>  
                  Hapus
                </button>

            </div>
            
          `  
              isi_table = []
              isi_table.push(kolom.nama, kolom.alamat, kolom.kota, kolom.telepon,kolom.no_identitas,kolom.pekerjaan,gridjs.html(aksi))
              vdata.push(isi_table)
            }
            new gridjs.Grid({
              columns: ["Nama", "Alamat", "Kota / Kabupaten", "No Telepon","No Identitas","Pekerjaan", ""],
              data: vdata,
              pagination: {
                enabled: true,
                limit: 5
              },
              search: true,
              language: {
                search: {
                  placeholder: "Cari"
                },
              'pagination': {
                'previous': 'Sebelumnya',
                'next': 'Selanjutnya',
                'showing': 'Menampilkan',
                'results': 'Hasil',
                'to':'Sampai',
                'of':'Dari'

                  
                }
              }
            }).render(document.getElementById("table_anggota"));
          
          
          },
          error: function (hasil) {
            toastr.error(hasil.responseText)
          }
        })
      }

      function  simpan_anggota(n_anggota,kondisi) {
       
  $.ajax({
    url: '/simpan_anggota',
    method: "POST",
    dataType: "JSON",
    data: {
      nama : document.getElementById(`${kondisi}_nama`).value,
      alamat : document.getElementById(`${kondisi}_alamat`).value,
      kota : document.getElementById(`${kondisi}_kota`).value,
      telepon : document.getElementById(`${kondisi}_telepon`).value,
      identitas : document.getElementById(`${kondisi}_identitas`).value,
      pekerjaan : document.getElementById(`${kondisi}_pekerjaan`).value,
      'n_anggota':n_anggota
    },
    success: function (hasil) {
     
      toastr.success('Berhasil simpan')
     
      setTimeout(()=>{
        window.location.reload();
      },1000)
      
      kosong_n_anggota()
    },
  
    error: function (hasil) {
      toastr.error(hasil.responseText)
    }
})
}

function  tampil_anggota(n_anggota) {
  window.n_anggota=n_anggota
  $.ajax({
    url: '/tampil_anggota',
    method: "POST",
    dataType: "JSON",
    data: {
    "n_anggota" :n_anggota
    },
    success: function (hasil) {
      document.getElementById("edit_nama").value=hasil.data.nama
      document.getElementById("edit_alamat").value=hasil.data.alamat
      document.getElementById("edit_kota").value=hasil.data.kota
      document.getElementById("edit_telepon").value=hasil.data.telepon
      document.getElementById("edit_identitas").value=hasil.data.no_identitas
      document.getElementById("edit_pekerjaan").value=hasil.data.pekerjaan
    },
  
    error: function (hasil) {
      toastr.error(hasil.responseText)
     
    }
})
}

