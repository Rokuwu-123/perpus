  function pilih_buku() {

    vhtml=``

    $.ajax({
    url: '/daftar_buku',
    method: "GET",
    dataType: "json",
    data: {},
    success: function (hasil) {

      for(data of hasil){
        vhtml += ` <option value = "${data.n_buku}">${data.judul}</option>`
      }

     
      $("#n_buku").html(vhtml)
    },
    error: function (hasil) {
      toastr.error(hasil.responseText)
    }
  })
   
  }

