      function history1() {
      
        $.ajax({
          url: '/history1',
          method: "post",
          dataType: "json",
          data: {
            tgl1 : document.getElementById("tanggal1").value,
            tgl2 : document.getElementById("tanggal2").value,
            n_buku : document.getElementById("n_buku").value,
           
          },
          success: function (hasil) {
            document.getElementById("stok").value=hasil.stok_awal
            console.log(hasil)

            vdata = []
            
            for (kolom of hasil.data) {
             
              isi_table = []
              isi_table.push(kolom.tanggal, kolom.pemasukan, kolom.pengeluaran,kolom.peminjaman,kolom.pengembalian,kolom.stok)
              vdata.push(isi_table)
            }
                        vtable_history.updateConfig({
                        data : vdata
                      }).forceRender()
                      
          },
          error: function (hasil) {
            toastr.error(hasil.responseText)
          }
        })
      }

