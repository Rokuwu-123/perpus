      function pilih_buku() {

        $.ajax({
          url: '/daftar_buku',
          method: "get",
          dataType: "json",
          data: {},
          success: function (hasil) {
            vhtml = ` <option value = "0">pilih buku</option>`

            for (data of hasil) {
              vhtml += ` <option value = "${data.n_buku}">${data.judul}</option>`
            }

            $("#tambah_judul").html(vhtml)
          },
          error: function (hasil) {
            toastr.error(hasil.responseText)
          }
        })

      }

      function pilih_buku2() {

        $.ajax({
          url: '/daftar_buku',
          method: "post",
          dataType: "json",
          data: {
            'n_penerbit': document.getElementById("tambah_penerbit").value,
          },
