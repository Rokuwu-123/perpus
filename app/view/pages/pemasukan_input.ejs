      //  batasssssssss



      function daftar_pemasukan() {
        $.ajax({
          url: '/daftar_pemasukan',
          method: "GET",
          dataType: "json",
          data: {},
          success: function (hasil) {
            vdata = []

            for (kolom of hasil) {

              isi_table = []

              isi_table.push(kolom.n_masuk, kolom.judul, kolom.nama, kolom.sumber, kolom.jumlah, kolom.tg_masuk,
                kolom.keterangan)
              vdata.push(isi_table)
            }

            new gridjs.Grid({
              columns: ["Nomer Buku Masuk", "Judul Buku", "penerbit", "Sumber", "Jumlah", "Tanggal Masuk",
                "Keterangan"
              ],
              data: vdata,
              pagination: {
                enabled: true,
                limit: 5
              },
              search: true,
              language: {
                search: {
                  placeholder: "Cari"
                },
                'pagination': {
                  'previous': 'Sebelumnya',
                  'next': 'Selanjutnya',
                  'showing': 'Menampilkan',
                  'results': 'Hasil',
                  'to': 'Sampai',
                  'of': 'Dari'


                }
              }
            }).render(document.getElementById("table_pemasukan"));
          },
          error: function (hasil) {
            toastr.error(hasil.responseText)
          }
        })
      }

      function simpan_pemasukan() {

        $.ajax({
          url: '/simpan_pemasukan',
          method: "POST",
          dataType: "JSON",
          data: {
            n_bukum: document.getElementById("tambah_judul").value,
            sumber: document.getElementById("tambah_sumber").value,
            jumlah: document.getElementById("tambah_jumlah").value,
            tg_masuk: document.getElementById("tambah_tg_masuk").value,
            keterangan: document.getElementById("tambah_keterangan").value,

